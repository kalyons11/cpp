---
Language:        Cpp
BasedOnStyle:    Google
IndentWidth:     4
ColumnLimit:     80
DerivePointerAlignment: false
PointerAlignment: Left
AllowShortFunctionsOnASingleLine: InlineOnly
BreakBeforeBraces: Allman
AlwaysBreakTemplateDeclarations: Yes
Standard:        Cpp11
SortIncludes: true
IncludeCategories:
  - Regex: '^<.*>$'  # External headers (e.g., standard library or system headers)
    Priority: 1
  - Regex: '.*'  # Catch-all for other includes
    Priority: 2
IncludeBlocks:   Preserve
NamespaceIndentation: All
BraceWrapping:
  AfterClass:      true
  AfterControlStatement: true
  AfterEnum:       true
  AfterFunction:   true
  AfterNamespace:  true
  AfterObjCDeclaration: true
  AfterStruct:     true
  AfterUnion:      true
  BeforeCatch:     true
  BeforeElse:      true
  IndentBraces:    false
IndentCaseLabels: false
...
